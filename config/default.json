{
  "services": {

    "events": {
      "path": "./services/events"
    },

    "logger": {
      "path": "./services/logger",
      "options": {
        "transports": [
          {
            "name": "console",
            "colorize": true,
            "timestamp": true
          }
        ]
      }
    },

    "github": {
      "path": "./services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "protocol": "https",
        "timeout": 5000,
        "headers": {
          "user-agent": "DevExp-App"
        }
      },
      "dependencies": []
    },

    "mongoose": {
      "path": "./services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },

    "model": {
      "path": "./services/model",
      "options": {
        "addons": {
          "pull_request": []
        }
      },
      "dependencies": ["mongoose"]
    },

    "http": {
      "path": "./services/http",
      "options": {
        "port": "8080",
        "routes": {
          "/favicon.ico": "http-routes-favicon",
          "/public": "http-routes-static",
          "/": "http-routes-index"
        }
      },
      "dependencies": [
        "logger",
        "http-routes-index",
        "http-routes-static",
        "http-routes-favicon"
      ]
    },

    "http-routes-index": {
      "path": "./services/http/routes/index",
      "options": {
        "assets": "./assets"
      }
    },

    "http-routes-static": {
      "path": "./services/http/routes/static",
      "options": {
        "assets": "./public"
      }
    },

    "http-routes-favicon": {
      "path": "./services/http/routes/favicon",
      "options": {
        "assets": "./assets"
      }
    },

    "pull-request-github": {
      "path": "./services/pull-request-github",
      "options": {
        "separator": {
          "top": "<div id='devexp-content-top'></div><hr>",
          "bottom": "<div id='devexp-content-bottom'></div>"
        }
      },
      "dependencies": [
        "model",
        "github",
        "logger"
      ]
    }

  },

  "startup_timeout": 5000,

  "shutdown_timeout": 1000

}
